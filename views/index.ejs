                                <i class="fa-solid fa-handshake-angle icon font-32"></i>
                                <h4 class="title">
                                    <a href="javascript:void(0)">
                                        Exclusive Management
                                    </a>
                                </h4>
                                <p class="mb-15">
                                    CHET will give you the best Convoy experience with our Assistance.
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-sm-20">
                            <div class="about-icon bg-light">
                                <i class="fa-solid fa-eye icon font-32"></i>
                                <h4 class="title">
                                    <a href="javascript:void(0)">
                                        Excelent Supervision
                                    </a>
                                </h4>
                                <p class="mb-15">
                                    CHET will take all the responsibilities and Supervise the whole Convoy.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Section: Upcoming Events -->
            <section>
                <div class="divider">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3 text-center">
                            <h2 class="title text-white mb-0">Upcoming Events</h2>
                        </div>
                    </div>
                    <div class="container pb-40">
                        <div class="section-content wow fadeIn" data-wow-duration="1.5s" data-wow-offset="10">
                            <div class="row multi-row-clearfix">
                                <div class="blog-posts">
                                    <% let count=events.length < 4 ? events.length : 4 %>
                                        <% for(var i=0; i < count; i++) { %>
                                            <div class="col-xs-12 col-sm-12 col-md-6">
                                                <article class="post clearfix maxwidth500">
                                                    <div class="col-md-12 col-lg-6 p-0">
                                                        <div class="entry-header">
                                                            <div class="post-thumb">
                                                                <img src="<%= events[i].banner %>" style="background-color: rgba(0, 0, 0, 0);
                                                            background-repeat: no-repeat;
                                                            background-size: cover;
                                                            object-fit: cover;
                                                            background-position: center center;
                                                            width: 100%;
                                                            height: 235px;
                                                            opacity: 1;
                                                            z-index: 20;
                                                            visibility: inherit;
                                                            position: inherit;
                                                            transform: matrix(1, 0, 0, 1, 0, 0);"
                                                                    class="img-responsive img-fullwidth">
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 col-lg-6 p-0">
                                                        <div class="entry-content p-30 pl-40">
                                                            <h5 class="entry-title pt-0">
                                                                <%= events[i].name %>
                                                            </h5>
                                                            <p>Come and join <%= events[i].name %>!
                                                            </p>
                                                            <a class="text-theme-colored font-11 mt-10 mb-0 pull-right flip"
                                                                href="https://convoyhub.in/event/<%= events[i].eventID %>"
                                                                target="_blank">
                                                                Read more <i class="fa fa-angle-double-right"></i>
                                                            </a>
                                                            <div class="clearfix"></div>
                                                            <div class="entry-date">
                                                                <% var date=new Date(Date.parse(events[i].start_at)) %>
                                                                    <% date.setTime(Math.round(date.getTime() -
                                                                        (date.getTimezoneOffset() * 60 * 1000))) %>
                                                                        <%= date.toLocaleDateString() %>
                                                            </div>
                                                            <div class="author-thumb">
                                                                <img class="img-circle"
                                                                    src="<%= events[i].organiser.image %>" width="50"
                                                                    height="50">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </article>
                                            </div>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

